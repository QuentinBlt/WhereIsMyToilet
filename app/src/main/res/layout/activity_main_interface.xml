<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainInterfaceActivity"
    android:background="@android:color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_maininterface_toolbar"
        style="@style/ToolBarStyle.AppTheme"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/activity_maininterface_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activity_maininterface_toolbar">

        <ListView
            android:id="@+id/activity_maininterface_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </ListView>

    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
