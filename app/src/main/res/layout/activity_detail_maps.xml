<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="net.toilet.my.is.where.com.whereismytoilet.ModelView.Detail_ToiletActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_detailtoilet_toolbar"
        style="@style/ToolBarStyle.AppTheme"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activity_detailtoilet_city"
                android:text="Saint-Genis-Les-Ollieres"
                android:textSize="18sp"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:layout_margin="5dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activity_detailtoilet_address"
                android:text="Place de la Mairie"
                android:textSize="16sp"
                android:textColor="#ff000000"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:text="Observation :"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activity_detailtoilet_observation"
                android:text="Place de la Mairie"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:maxLines="5"
                android:textStyle="italic" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/toolbar_dropshadow" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tools:context="net.toilet.my.is.where.com.whereismytoilet.ModelView.DetailMapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment" />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/toolbar_dropshadow" />
    </FrameLayout>

</LinearLayout>


